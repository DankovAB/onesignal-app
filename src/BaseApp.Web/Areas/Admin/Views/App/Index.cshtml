@using BaseApp.Web.Areas.Admin.Components.App
@using BaseApp.Common

@{
    ViewBag.Title = "View apps";
}

<div class="col-xs-12">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-8">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="col-xs-4 text-right" policy="@Constants.Policy.Admin">
                <a href="@Url.Action("Create")">Create App</a>
            </div>
        </div>
        <div class="row apps-list">
            <div class="col-xs-offset-1 col-xs-10">
                @(await Component.InvokeAsync<AppListViewComponent>())
            </div>
        </div>
    </div>
</div>