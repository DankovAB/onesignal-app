@using BaseApp.Common
@model BaseApp.Web.Areas.Admin.Models.App.EditAppModel

@{
    var actionName = Model.Id.HasValue ? "Edit" : "Create";
    ViewBag.Title = $"{actionName} app";
}

<div class="col-xs-12">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-8">
                <h4>@ViewBag.Title</h4>
            </div>
        </div>
        <form asp-action="@actionName" class="form-horizontal" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id"/>

            <p>
                @Html.ValidationSummary()
            </p>
            <fieldset>
                <legend>App name: @Model.Name</legend>

                <div class="form-group">
                    <label asp-for="Name" class="col-sm-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ApnsEnv" class="col-sm-2 control-label"></label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(r => r.ApnsEnv, Html.GetEnumSelectList<Enums.ApnsEnvironmentTypes>(), "", new { @class = "form-control" })
                        <span asp-validation-for="ApnsEnv"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ApnsP12" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="file" asp-for="ApnsP12" class="form-control"/>
                        <span asp-validation-for="ApnsP12"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ApnsP12Password" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="ApnsP12Password" class="form-control"/>
                        <span asp-validation-for="ApnsP12Password"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="OrganizationId" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="OrganizationId" class="form-control"/>
                        <span asp-validation-for="OrganizationId"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="GcmKey" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="GcmKey" class="form-control"/>
                        <span asp-validation-for="GcmKey"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-primary"/>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>